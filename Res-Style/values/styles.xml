<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Example theme -->
	<!-- Android Asset Studio: http://android-ui-utils.googlecode.com/hg/asset-studio/dist/index.html -->
	<!-- Original Android styles: https://github.com/android/platform_frameworks_base/blob/master/core/res/res/values/styles.xml -->
	
	<style name="Theme.Example" parent="Theme.Sherlock.Light">
		<!-- window background -->
		<item name="android:windowBackground">@color/global_bg_back</item>
		
		<!-- action bar icon -->
		<item name="icon">@drawable/ic_launcher</item>
		<item name="android:icon">@drawable/ic_launcher</item>
		
		<!-- action bar logo -->
		<!--
		<item name="logo">@drawable/ab_logo</item>
		<item name="android:logo">@drawable/ab_logo</item>
		-->

		<!-- action bar back icon -->
		<item name="homeAsUpIndicator">@drawable/ab_ic_back</item>
		<item name="android:homeAsUpIndicator">@drawable/ab_ic_back</item>
		
		<!-- action bar divider -->
		<item name="actionBarDivider">@drawable/ab_divider</item>
		<item name="android:actionBarDivider">@drawable/ab_divider</item>

		<!-- action bar button text color -->
		<item name="actionMenuTextColor">@color/ab_button_text</item>
		<item name="android:actionMenuTextColor">@color/ab_button_text</item>

		<!-- action bar button background drawable -->
		<item name="actionBarItemBackground">@drawable/selector_ab_button_bg</item>
		<item name="android:actionBarItemBackground">@drawable/selector_ab_button_bg</item>

		<!-- action bar popup menu item background drawable -->
		<item name="itemBackground">@drawable/selector_ab_button_bg</item>
		<item name="android:itemBackground">@drawable/selector_ab_button_bg</item>

		<!-- action bar action mode background drawable -->
		<item name="actionModeBackground">@drawable/ab_bg_mode_top</item>
		<item name="android:actionModeBackground">@drawable/ab_bg_mode_top</item>

		<!-- action bar action mode split background drawable -->
		<item name="actionModeSplitBackground">@drawable/ab_bg_mode_bottom</item>
		<item name="android:actionModeSplitBackground">@drawable/ab_bg_mode_bottom</item>

		<!-- action bar menu hardkey panel background drawable -->
		<item name="android:panelBackground">@drawable/ab_popup_bottom_bg</item>

		<!-- action bar shadow overlay -->
		<!--
		<item name="windowContentOverlay">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		-->
		
		<!-- action bar list choice checkbox and radio -->
		<!-- 
		<item name="android:listChoiceIndicatorMultiple">@drawable/selector_ab_checkbox_bg</item>
		<item name="android:listChoiceIndicatorSingle">@drawable/selector_ab_radio_bg</item>
		-->
		
		<!-- action bar style -->
		<item name="actionBarStyle">@style/Example.ActionBar</item>
		<item name="android:actionBarStyle">@style/Example.ActionBar</item>
		
		<!-- action bar button text style -->
		<item name="actionMenuTextAppearance">@style/Example.ActionBar.ActionMenuTextAppearance</item>
		<item name="android:actionMenuTextAppearance">@style/Example.ActionBar.ActionMenuTextAppearance</item>
		
		<!-- action bar popup menu background style -->
		<item name="popupMenuStyle">@style/Example.ActionBar.PopupMenu</item>
		<item name="android:popupMenuStyle">@style/Example.ActionBar.PopupMenu</item>
		
		<!-- action bar popup menu item background style -->
		<item name="dropDownListViewStyle">@style/Example.ActionBar.DropDownListView</item>
		<item name="android:dropDownListViewStyle">@style/Example.ActionBar.DropDownListView</item>
		
		<!-- action bar list navigation dropdown style -->
		<item name="actionDropDownStyle">@style/Example.ActionBar.ActionDropDown</item>
		<item name="android:actionDropDownStyle">@style/Example.ActionBar.ActionDropDown</item>
		
		<!-- action bar tab style -->
		<item name="actionBarTabStyle">@style/Example.ActionBar.Tab</item>
		<item name="android:actionBarTabStyle">@style/Example.ActionBar.Tab</item>
		
		<!-- action bar tab text style -->
		<item name="actionBarTabTextStyle">@style/Example.ActionBar.TabText</item>
		<item name="android:actionBarTabTextStyle">@style/Example.ActionBar.TabText</item>
		
		<!-- action bar action mode close button style -->
		<item name="actionModeCloseButtonStyle">@style/Example.ActionBar.ActionModeCloseButton</item>
		<item name="android:actionModeCloseButtonStyle">@style/Example.ActionBar.ActionModeCloseButton</item>
		
		<!-- view styles -->
		<item name="android:textViewStyle">@style/Example.TextView.Light</item>
		<item name="android:buttonStyle">@style/Example.Button.Light</item>
		<item name="android:editTextStyle">@style/Example.EditText.Light</item>
		<item name="android:checkboxStyle">@style/Example.CheckBox.Light</item>
	</style>
	
	
	<!-- action bar style -->
	<style name="Example.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
		<!-- action bar background -->
		<item name="background">@drawable/ab_bg_default</item>
		<item name="android:background">@drawable/ab_bg_default</item>
		
		<!-- stacked action bar background -->
		<item name="backgroundStacked">@drawable/ab_bg_stacked</item>
		<item name="android:backgroundStacked">@drawable/ab_bg_stacked</item>
		
		<!-- split action bar background -->
		<item name="backgroundSplit">@drawable/ab_bg_split</item>
		<item name="android:backgroundSplit">@drawable/ab_bg_split</item>
		
		<!-- action bar title style -->
		<item name="titleTextStyle">@style/Example.ActionBar.TitleText</item>
		<item name="android:titleTextStyle">@style/Example.ActionBar.TitleText</item>
		
		<!-- action bar subtitle style -->
		<item name="subtitleTextStyle">@style/Example.ActionBar.SubtitleText</item>
		<item name="android:subtitleTextStyle">@style/Example.ActionBar.SubtitleText</item>
		
		<!-- action bar progress bar style -->
		<item name="progressBarStyle">@style/Example.ActionBar.ProgressBar</item>
		<item name="android:progressBarStyle">@style/Example.ActionBar.ProgressBar</item>
		
		<!-- action bar indeterminate progress bar style -->
		<item name="indeterminateProgressStyle">@style/Example.ActionBar.IndeterminateProgressBar</item>
		<item name="android:indeterminateProgressStyle">@style/Example.ActionBar.IndeterminateProgressBar</item>

		<!-- options affecting how the action bar is displayed: http://developer.android.com/reference/android/R.styleable.html#ActionBar_displayOptions -->
		<!--
		<item name="displayOptions">showHome|useLogo</item>
		<item name="android:displayOptions">showHome|useLogo</item>
		-->
	</style>
	
	
	<!-- action bar title style -->
	<style name="Example.ActionBar.TitleText" parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/ab_title_text</item>
		<item name="android:textColor">@color/ab_title_text</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	
	<!-- action bar subtitle style -->
	<style name="Example.ActionBar.SubtitleText" parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/ab_subtitle_text</item>
		<item name="android:textColor">@color/ab_subtitle_text</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	
	<!-- action bar progress bar style -->
	<style name="Example.ActionBar.ProgressBar" parent="Widget.Sherlock.Light.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/layer_list_ab_progressbar_horizontal</item>
	</style>
	
	
	<!-- action bar indeterminate progress bar style -->
	<style name="Example.ActionBar.IndeterminateProgressBar" parent="@android:style/Widget.ProgressBar.Large.Inverse">
		<item name="android:minWidth">@dimen/ab_indeterminate_progress_bar_size</item>
		<item name="android:maxWidth">@dimen/ab_indeterminate_progress_bar_size</item>
		<item name="android:minHeight">@dimen/ab_indeterminate_progress_bar_size</item>
		<item name="android:maxHeight">@dimen/ab_indeterminate_progress_bar_size</item>
	</style>
	
	
	<!-- action bar button text style -->
	<style name="Example.ActionBar.ActionMenuTextAppearance" parent="TextAppearance.Sherlock.Widget.ActionBar.Menu">
		<item name="android:textSize">@dimen/ab_button_text</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAllCaps">false</item>
	</style>
	
	
	<!-- action bar popup menu style -->
	<style name="Example.ActionBar.PopupMenu" parent="Widget.Sherlock.Light.PopupMenu"> <!-- Widget.Sherlock.Light.ListPopupWindow -->
		<item name="android:popupBackground">@drawable/ab_popup_bg</item>
	</style>
	
	
	<!-- action bar popup menu item style -->
	<style name="Example.ActionBar.DropDownListView" parent="Widget.Sherlock.Light.ListView.DropDown">
		<item name="android:listSelector">@drawable/selector_ab_button_bg</item>
		<item name="android:divider">@color/ab_dropdown_listview_divider</item>
		<item name="android:dividerHeight">@dimen/ab_dropdown_listview_divider</item>
	</style>
	
	
	<!-- action bar list navigation dropdown style -->
	<style name="Example.ActionBar.ActionDropDown" parent="Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
		<item name="background">@drawable/selector_ab_dropdown_bg</item>
		<item name="android:background">@drawable/selector_ab_dropdown_bg</item>
		<item name="android:popupBackground">@drawable/ab_popup_bg</item>
		<item name="android:dropDownSelector">@drawable/selector_ab_button_bg</item>
	</style>
	
	
	<!-- action bar tab style -->
	<style name="Example.ActionBar.Tab" parent="Widget.Sherlock.Light.ActionBar.TabBar"> <!-- Widget.Sherlock.Light.ActionBar.TabView -->
		<item name="background">@drawable/selector_ab_tab_bg</item>
		<item name="android:background">@drawable/selector_ab_tab_bg</item>
		<item name="android:paddingLeft">@dimen/ab_tab_padding</item>
		<item name="android:paddingRight">@dimen/ab_tab_padding</item>
		<item name="android:gravity">center</item>
	</style>
	
	
	<!-- action bar tab text style -->
	<style name="Example.ActionBar.TabText" parent="Widget.Sherlock.ActionBar.TabText">
		<item name="android:textSize">@dimen/ab_tab_text</item>
		<item name="android:textColor">@color/ab_tab_text</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAllCaps">true</item>
	</style>
	
	
	<!-- action bar action mode close button style -->
	<style name="Example.ActionBar.ActionModeCloseButton" parent="Widget.Sherlock.Light.ActionButton.CloseMode">
		<item name="android:background">@drawable/selector_ab_mode_close_bg</item>
	</style>
	
	
	<!-- view textview -->
	<style name="Example.TextView" parent="@android:style/Widget.TextView">
		<item name="android:textColor">@color/global_text_primary_inverse</item>
	</style>
	<style name="Example.TextView.Light" parent="@android:style/Widget.TextView">
		<item name="android:textColor">@color/global_text_primary</item>
	</style>
	
	
	<!-- view button -->
	<style name="Example.Button" parent="@android:style/Widget.Button">
		<item name="android:textColor">@color/global_text_primary</item>
	</style>
	<style name="Example.Button.Light" parent="@android:style/Widget.Button">
		<item name="android:textColor">@color/global_text_primary</item>
	</style>
	
	
	<!-- view edittext -->
	<style name="Example.EditText" parent="@android:style/Widget.EditText">
		<item name="android:textColor">@color/global_text_primary</item>
		<item name="android:textColorHint">@color/global_text_secondary</item>
	</style>
	<style name="Example.EditText.Light" parent="@android:style/Widget.EditText">
		<item name="android:textColor">@color/global_text_primary</item>
		<item name="android:textColorHint">@color/global_text_secondary</item>
	</style>
	
	
	<!-- view checkbox -->
	<style name="Example.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:textColor">@color/global_text_primary_inverse</item>
	</style>
	<style name="Example.CheckBox.Light" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:textColor">@color/global_text_primary</item>
	</style>
</resources>
